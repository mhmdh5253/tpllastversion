@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BE.LetterAutomation.UserOrganization

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@(Model.Id == 0 ? "افزودن" : "ویرایش") کاربر به سازمان</h3>
    </div>
    <div class="card-body">
        <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="UserId" class="control-label">کاربر</label>
                <select asp-for="UserId" class="form-control select2" asp-items="ViewBag.Users">
                    <option value="">-- انتخاب کاربر --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label">سازمان</label>
                <select asp-for="OrganizationId" class="form-control select2" asp-items="ViewBag.Organizations">
                    <option value="">-- انتخاب سازمان --</option>
                </select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label">سمت</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsHead" /> @Html.DisplayNameFor(model => model.IsHead)
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsDeputy" /> @Html.DisplayNameFor(model => model.IsDeputy)
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>