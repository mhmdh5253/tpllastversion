@model IEnumerable<BE.LetterAutomation.Kelasehnameh>

@{
    ViewData["Title"] = "لیست کلاسه‌ها";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0 text-white">لیست کلاسه‌ها</h3>
        <a asp-action="Create" class="btn btn-light">
            <i class="fas fa-plus ml-2"></i> ایجاد کلاسه جدید
        </a>
    </div>
    @if (TempData["Error"] !=null)
    {
        <div class="text-danger alert-danger card-alert" style="padding: 10px; margin: 10px;">
            @TempData["Error"]
        </div>
    }
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>کد کلاسه</th>
                        <th>نام کلاسه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CodeKelaseh)</td>
                            <td>@Html.DisplayFor(modelItem => item.NameKelaseh)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> ویرایش
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i> جزئیات
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section pagecss {
    <style>
        .card {
            border-radius: 15px;
            border: none;
            margin-top: 1.5rem;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
            font-family: 'Yekan', 'Segoe UI', Tahoma, sans-serif;
        }

        .table {
            font-family: 'Yekan', 'Segoe UI', Tahoma, sans-serif;
            text-align: center;
        }

            .table th {
                font-weight: 700;
                background-color: #f8f9fa;
            }

        .btn {
            border-radius: 8px;
            font-family: 'Yekan', 'Segoe UI', Tahoma, sans-serif;
            font-weight: 500;
            margin: 2px;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
}