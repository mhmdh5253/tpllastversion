@model BE.LetterAutomation.Kelasehnameh

@{
    ViewData["Title"] = "جزئیات کلاسه";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0 text-white">
            <i class="fas fa-info-circle ml-2 "></i> جزئیات کلاسه
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="details-container row">
                    <div class="detail-item">
                        <span class="detail-label">کد کلاسه:</span>
                        <span class="detail-value">@Html.DisplayFor(model => model.CodeKelaseh)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">نام کلاسه:</span>
                        <span class="detail-value">@Html.DisplayFor(model => model.NameKelaseh)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer bg-light d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="fas fa-edit ml-2"></i> ویرایش
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right ml-2"></i> بازگشت به لیست
        </a>
    </div>
</div>

@section pagecss {
    <style>
        .card {
            border-radius: 15px;
            border: none;
            margin-top: 1.5rem;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
            font-family: 'Yekan', 'Segoe UI', Tahoma, sans-serif;
        }

        .details-container {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #e9ecef;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-weight: 600;
            color: #495057;
        }

        .detail-value {
            color: #212529;
            font-weight: 500;
        }

        .btn {
            border-radius: 8px;
            font-family: 'Yekan', 'Segoe UI', Tahoma, sans-serif;
            font-weight: 500;
            min-width: 120px;
        }
    </style>
}