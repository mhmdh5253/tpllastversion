@model BE.Tokening.Token
@{
    ViewData["Title"] = "نتیجه اعتبارسنجی توکن";
}
<partial name="Admin/_ProfileParitial" />
<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <div class="alert @((ViewBag.IsValid == true) ? "alert-success" : "alert-danger")">
        @ViewBag.ValidationResult
    </div>

    @if (Model != null)
    {
        <div class="card mt-4">
            <div class="card-header">
                اطلاعات توکن
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">شناسه توکن:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">شناسه کاربر:</dt>
                    <dd class="col-sm-9">@Model.UserId</dd>

                    <dt class="col-sm-3">تاریخ ایجاد:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm:ss")</dd>

                    <dt class="col-sm-3">تاریخ انقضا:</dt>
                    <dd class="col-sm-9">@Model.ExpiresAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm:ss")</dd>
                    <dt class="col-sm-3">توضیحات:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                </dl>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Validate" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> اعتبارسنجی جدید
        </a>
        <a asp-action="Index" class="btn btn-primary ms-2">
            <i class="fas fa-list"></i> مشاهده لیست توکن‌ها
        </a>
    </div>
</div>