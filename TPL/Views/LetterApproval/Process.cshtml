@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BE.LetterAutomation.LetterApproval

<div class="card">
    <div class="card-header">
        <h3 class="card-title">پردازش درخواست تایید</h3>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <h5>اطلاعات نامه</h5>
                <p><strong>شماره نامه:</strong> @Model?.Letter?.LetterNumber</p>
                <p><strong>موضوع:</strong> @Model?.Letter?.Subject</p>
                <p><strong>تاریخ ثبت:</strong> @Model?.Letter?.RegistrationDate</p>
            </div>
            <div class="col-md-6">
                <h5>اطلاعات درخواست</h5>
                <p><strong>درخواست کننده:</strong> @Model?.Requester?.FirstName @Model?.Requester?.LastName</p>
                <p><strong>سطح تایید:</strong> @Model?.ApprovalLevel</p>
                <p><strong>سازمان:</strong> @Model?.Organization?.Name</p>
            </div>
        </div>

        <form asp-action="Process" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Comment" class="control-label">توضیحات</label>
                <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">عملیات</label>
                <div>
                    <button type="submit" name="action" value="approve" class="btn btn-success">تایید نامه</button>
                    <button type="submit" name="action" value="reject" class="btn btn-danger">رد نامه</button>
                    <button type="submit" name="action" value="return" class="btn btn-info">بازگشت به سطح قبل</button>
                    <a asp-action="Index" class="btn btn-secondary">انصراف</a>
                </div>
            </div>
        </form>
    </div>
</div>