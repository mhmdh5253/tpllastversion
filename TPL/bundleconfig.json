[
  {
    "outputFileName": "wwwroot/css/bundle.min.css",
    "inputFiles": [
      "wwwroot/css/**/*.css" // همه فایل‌های CSS در پوشه wwwroot/css
    ],
    "minify": {
      "enabled": true,
      "commentMode": "none"
    }
  },
  {
    "outputFileName": "wwwroot/js/bundle.min.js",
    "inputFiles": [
      "wwwroot/js/**/*.js" // همه فایل‌های JS در پوشه wwwroot/js
    ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  }
]